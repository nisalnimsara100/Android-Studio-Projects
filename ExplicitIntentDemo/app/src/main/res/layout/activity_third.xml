<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for the ThirdActivity.
    Simple layout with just a thank you message.
    This is the final screen in the app flow.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutThird"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Thank You message displayed to the user at the end of the flow -->
    <TextView
        android:id="@+id/textViewThankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Thank You!"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>
